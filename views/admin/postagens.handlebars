<h2>Lista de Postagens:</h2>

<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}

    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>{{descricao}}</p>
            <small>Data: {{data}}</small> <br>
            <small>Categoria: {{categoria.nome}}</small>

            <div class="mt-2">
                <form action="/admin/postagens/editar" method="post" class="d-inline">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button class="btn btn-success">Editar</button>
                </form>

                <form action="/admin/postagens/deletar" method="post" class="d-inline">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
            </div>
        </div>
    </div>

{{else}}

    <h4 class="mt-3">Nenhuma postagem registrada.</h4>

{{/each}}
{{#if erro}}
    <div class="alert alert-danger">{{erro}}</div>
{{/if}}

<h3>Nova Postagem:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/novaPostagem" method="post">
            <label for="titulo"> Título: </label>
            <input type="text" placeholder="Nome da Categoria" name="titulo" id="titulo" class="form-control" required>

            <label for="slug"> Slug: </label>
            <input type="text" placeholder="Slug da Categoria" name="slug" id="slug" class="form-control" required>

            <label for="descricao"> Descrição: </label>
            <input type="text" placeholder="Slug da Categoria" name="descricao" id="descricao" class="form-control" required>

            <label for="conteudo"> Conteúdo: </label>
            <textarea name="conteudo" id="conteudo" class="form-control" required></textarea>

            <label for="categoria"> Categoria: </label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                
                    <option value="{{_id}}">{{nome}}</option>

                {{else}}

                    <option value="0"> Nenhuma categoria registrada.</option>

                {{/each}}
            </select>
            
            <button type="submit" class="btn btn-success mt-3">Criar Postagem</button>
        </form>
    </div>
</div>
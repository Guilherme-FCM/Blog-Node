{{#each erros}}

    <div class="alert alert-danger">{{texto}}</div>

{{/each}}

<h3>Editar Categoria:</h3>

<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <input type="hidden" name="id" value="{{categoria._id}}">
            <label for="nome"> Nome: </label>
            <input type="text" placeholder="Nome da Categoria" name="nome" id="nome" class="form-control" value="{{categoria.nome}}" required>

            <label for="slug"> Slug: </label>
            <input type="text" value="{{categoria.slug}}" placeholder="Slug da Categoria" name="slug" id="slug" class="form-control" required>

            <br>

            <button type="submit" class="btn btn-success">Editar Categoria</button>
        </form>
    </div>
</div>